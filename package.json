{
  "name": "fundraising-banners",
  "version": "1.0.0",
  "description": "WMDE fundraising banners",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "npm-run-all test:*",
    "test:unit": "vitest --run",
    "watch": "webpack --watch",
    "build": "npm-run-all -s check-content-version build:banners",
    "build:banners": "webpack --config webpack.production.js",
    "build:thankyou": "webpack --config webpack.production.js --env campaign_info=campaign_info.thank_you.toml",
    "start": "npm run dev",
    "dev": "nodemon",
    "thankyou": "webpack serve --host 0.0.0.0 --env campaign_info=campaign_info.thank_you.toml",
    "clean": "rimraf dist/*.js dist/*.wikitext dist/*.map",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext .js,.vue,.ts,.cjs --cache --cache-location .eslintcache --ignore-path .gitignore .",
    "lint:ts": "vue-tsc --noEmit",
    "lint:css": "stylelint '**/*.{scss,vue}'",
    "ci": "npm-run-all lint test",
    "check-content-version": "ts-node check-content-version.ts",
    "coverage": "vitest run --coverage",
    "update-content": "npm update fundraising-frontend-content"
  },
  "keywords": [],
  "author": "fundaising-tech@wikimedia.de",
  "license": "MIT",
  "repository": "https://github.com/wmde/fundraising-banners",
  "dependencies": {
    "format-number": "^3.0.0",
    "fundraising-frontend-content": "github:wmde/fundraising-frontend-content#production",
    "keen-slider": "^6.8.6",
    "vue": "^3.4.33"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.3",
    "@stylistic/stylelint-config": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@types/jsdom": "^21.1.7",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^2.0.4",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-wikimedia": "^0.28.2",
    "eslint-plugin-jsdoc": "^48.8.3",
    "eslint-plugin-unicorn": "^54.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "eslint-plugin-yml": "^1.14.0",
    "handlebars": "^4.7.8",
    "jsdom": "^24.1.1",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^16.14.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "sass-loader": "^14.2.1",
    "string-replace-loader": "^3.1.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.8.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-webpack-plugin": "^5.0.1",
    "toml": "^3.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.1",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.0.28",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0",
    "webpack-merge": "^6.0.1",
    "webpack-sources": "^3.2.3"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ]
}
